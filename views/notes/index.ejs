<%- include('../partials/header', { user: user }) %>

<main>
  <h2>Your Notes</h2>
  <a href="/notes/new">Create New Note</a>

  <% if (notes.length === 0) { %>
    <p>No notes available.</p>
  <% } else { %>
    <ul>
      <% notes.forEach(note => { %>
        <li>
          <strong><%= note.title %></strong><br>
          <%= note.content %><br>
          <a href="/notes/<%= note._id %>/edit">Edit</a>
          
          <!-- Delete Note Form -->
          <form action="/notes/<%= note._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" onclick="return confirm('Are you sure you want to delete this note?')">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>
</main>

<%- include('../partials/footer') %>

