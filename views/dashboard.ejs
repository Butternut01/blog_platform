<%- include('partials/header', { user: user }) %>
<main>
  <h2>Dashboard</h2>
  <p>Welcome, <%= user.username %>!</p>
  <% if (user.profilePic) { %>
    <img src="<%= user.profilePic %>" alt="Profile Picture" style="max-width:150px;">
  <% } else { %>
    <p>No profile picture uploaded.</p>
  <% } %>
  <p>Email: <%= user.email %></p>

  <!-- Button to navigate to the notes page -->
  <a href="/notes" class="btn">Enter Notes</a>
</main>
<%- include('partials/footer') %>
